<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:layout_marginStart="6dp"
    android:layout_marginEnd="6dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="7dp"
    app:cardUseCompatPadding="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="14dp">

        <!-- Product Name -->
        <TextView
            android:id="@+id/txtCartName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Product"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="#111111"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@id/btnCartRemove" />

        <!-- Remove Button (smaller, cleaner) -->
        <Button
            android:id="@+id/btnCartRemove"
            android:layout_width="wrap_content"
            android:layout_height="36dp"
            android:text="Remove"
            android:textAllCaps="false"
            android:textSize="12sp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Price -->
        <TextView
            android:id="@+id/txtCartPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$0.00"
            android:textStyle="bold"
            android:textSize="14sp"
            android:textColor="#2E7D32"
            android:layout_marginTop="6dp"
            app:layout_constraintTop_toBottomOf="@id/txtCartName"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Divider -->
        <View
            android:id="@+id/divCart"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:background="#EFEFEF"
            app:layout_constraintTop_toBottomOf="@id/txtCartPrice"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Qty Controls -->
        <Button
            android:id="@+id/btnCartMinus"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:text="-"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/divCart"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="10dp" />

        <TextView
            android:id="@+id/txtCartQty"
            android:layout_width="56dp"
            android:layout_height="wrap_content"
            android:text="1"
            android:textAlignment="center"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toTopOf="@id/btnCartMinus"
            app:layout_constraintBottom_toBottomOf="@id/btnCartMinus"
            app:layout_constraintStart_toEndOf="@id/btnCartMinus" />

        <Button
            android:id="@+id/btnCartPlus"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:text="+"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="@id/btnCartMinus"
            app:layout_constraintStart_toEndOf="@id/txtCartQty" />

        <!-- Subtotal hint (optional, looks professional) -->
        <TextView
            android:id="@+id/txtCartSubtotalHint"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Update quantity to recalculate total"
            android:textSize="12sp"
            android:textColor="#777777"
            android:layout_marginStart="12dp"
            app:layout_constraintTop_toTopOf="@id/btnCartMinus"
            app:layout_constraintBottom_toBottomOf="@id/btnCartMinus"
            app:layout_constraintStart_toEndOf="@id/btnCartPlus"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>
